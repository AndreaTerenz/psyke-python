#:set default_width 130
#:set default_height 40

<SpinnerOption>:
    size_hint: None, None
    size: default_width, 40

<Spinner>:
    size_hint: (None, None)
    width: default_width
    height: default_height

<Button>:
    size_hint: (None, None)
    width: default_width
    height: default_height

<ToggleButton>:
    size_hint: (None, None)
    width: default_width
    height: default_height

<TextInput>:
    size_hint: (None, None)
    width: default_width - 60
    height: default_height - 10
    multiline: False

<PanelBoxLayout>:
    size_hint: (None, None)
    width: 520
    height: 220

<SidebarBoxLayout>:
    size_hint_x: None
    width: 290
    padding: 20
    spacing: 15
